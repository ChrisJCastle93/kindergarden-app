                <br>
                <div class="space-y-4">
                  <label for="group" class="block text-sm font-medium text-neutral-600">Group Number</label>
                  <div class="mt-1">
                    <input placeholder="Group Number" type="number" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" name="group" id="" />
                  </div>
                </div>
                  <br>
                <div class="space-y-4">
                  <label for="headline" class="block text-sm font-medium text-neutral-600">Headline</label>
                  <div class="mt-1">
                    <input placeholder="Headline" type="text" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" name="headline" />
                  </div>
                </div>

                  <br>
                <div class="space-y-4">
                  <label for="content" class="block text-sm font-medium text-neutral-600">Content</label>
                  <div class="mt-1">
                    <textarea placeholder="Content" type="text" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" name="content" cols="30" rows="5" id=""></textarea>
                  </div>
                </div>
                  <br>

                <div class="space-y-4">
                  <label for="admin-file" class="block text-sm font-medium text-neutral-600">Upload File</label>
                  <div class="mt-1">
                    <input placeholder="File upload" type="file" class="block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" name="admin-file" id="" />
                  </div>
                </div>
                <br>
                <div class="space-y-4">
                  <div class="mt-1">

                    <button type="submit" class="flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Submit News</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

